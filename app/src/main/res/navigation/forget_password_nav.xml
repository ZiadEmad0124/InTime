<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/forget_password_nav"
    app:startDestination="@id/emailForNewPassword">

    <fragment
        android:id="@+id/emailForNewPassword"
        android:name="com.ziad_emad_dev.in_time.ui.forgetPassword.EmailForNewPassword"
        android:label="fragment_email_for_new_password"
        tools:layout="@layout/fragment_email_for_new_password">
        <action
            android:id="@+id/action_emailForNewPassword_to_resetPassword"
            app:destination="@id/resetPassword"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/resetPassword"
        android:name="com.ziad_emad_dev.in_time.ui.forgetPassword.ResetPassword"
        android:label="fragment_reset_password"
        tools:layout="@layout/fragment_reset_password">
        <action
            android:id="@+id/action_resetPassword_to_emailForNewPassword"
            app:destination="@id/emailForNewPassword"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <argument
            android:name="email"
            app:argType="string" />
    </fragment>
</navigation>