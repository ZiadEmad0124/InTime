<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="InTime.CardView.OnBoarding" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">@dimen/border_radius_16</item>
        <item name="strokeColor">@color/sky_1</item>
        <item name="strokeWidth">@dimen/stroke_width</item>
    </style>

    <style name="InTime.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">@dimen/standard_15</item>
    </style>

    <style name="InTime.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopEnd">@dimen/border_radius_16</item>
        <item name="boxCornerRadiusTopStart">@dimen/border_radius_16</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/border_radius_16</item>
        <item name="boxCornerRadiusBottomStart">@dimen/border_radius_16</item>
        <item name="boxStrokeColor">@color/primary</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="maxLines">1</item>
        <item name="hintTextColor">@color/secondary</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="InTime.TextInputEditText" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:textColor">@color/secondary</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:lines">1</item>
        <item name="android:padding">@dimen/standard_20</item>
    </style>

    <style name="InTime.PinView" parent="PinWidget.PinView">
        <item name="android:cursorVisible">true</item>
        <item name="cursorColor">@color/primary</item>
        <item name="cursorWidth">@dimen/stroke_width</item>
        <item name="hideLineWhenFilled">false</item>
        <item name="lineColor">@drawable/pin_line</item>
        <item name="lineWidth">@dimen/stroke_width</item>
        <item name="viewType">rectangle</item>
        <item name="itemCount">4</item>
        <item name="itemHeight">80dp</item>
        <item name="itemWidth">80dp</item>
        <item name="itemSpacing">@dimen/standard_5</item>
        <item name="itemRadius">@dimen/border_radius_8</item>
        <item name="android:textColor">@color/blue_dark</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="InTime.BottomNavigationView.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/white_5</item>
    </style>

    <style name="InTime.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/white</item>
        <item name="itemActiveIndicatorStyle">@style/InTime.BottomNavigationView.ActiveIndicator
        </item>
        <item name="itemIconTint">@color/secondary</item>
        <item name="itemTextColor">@color/secondary</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <style name="InTime.CardView.Add" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/white_4</item>
        <item name="cardCornerRadius">@dimen/border_radius_16</item>
        <item name="strokeColor">@color/sky_2</item>
        <item name="strokeWidth">@dimen/stroke_width</item>
    </style>

    <style name="InTime.SearchBar" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:background">@drawable/search_bar_background</item>
        <item name="drawableTint">@color/secondary</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lines">1</item>
        <item name="android:paddingVertical" tools:targetApi="o">@dimen/standard_15</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">@dimen/standard_50</item>
    </style>

    <style name="InTime.TextInputEditText.CreateTask" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:background">@drawable/create_edit_text_background</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="android:textColorHint">@color/secondary</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:lines">1</item>
        <item name="android:padding">@dimen/standard_20</item>
        <item name="android:elevation">@dimen/standard_5</item>
        <item name="android:drawablePadding">@dimen/standard_10</item>
    </style>

    <style name="InTime.MaterialButton.CreateProject" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:background">@drawable/create_edit_text_background</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="iconPadding">@dimen/standard_15</item>
        <item name="iconSize">@dimen/standard_25</item>
        <item name="iconTint">@color/primary</item>
    </style>

    <style name="InTime.MaterialButton.EditProfile" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:background">@drawable/button_background</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textSize">26sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="iconGravity">textEnd</item>
        <item name="iconPadding">@dimen/standard_10</item>
    </style>

    <style name="InTime.TabLayout" parent="Widget.Material3.TabLayout">
        <item name="android:background">@drawable/tab_layout_background</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:padding">@dimen/standard_5</item>
        <item name="tabGravity">center</item>
        <item name="tabMode">scrollable</item>
        <item name="tabIndicatorColor">@color/primary</item>
        <item name="tabSelectedTextColor">@color/primary</item>
        <item name="tabTextColor">@color/blue_dark</item>
    </style>

    <style name="InTime.CardView.Task" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">@dimen/border_radius_16</item>
        <item name="strokeWidth">@dimen/stroke_width</item>
    </style>

    <style name="InTime.CardView.Project" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">@dimen/border_radius_16</item>
        <item name="strokeColor">@color/black_2</item>
        <item name="strokeWidth">@dimen/stroke_width</item>
    </style>

    <style name="InTime.CardView.Date" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">@dimen/border_radius_16</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">@dimen/stroke_width</item>
        <item name="cardElevation">3dp</item>
    </style>

    <style name="InTime.CardView.ProjectTasks" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">@dimen/border_radius_16</item>
        <item name="strokeColor">@color/secondary</item>
        <item name="strokeWidth">@dimen/stroke_width</item>
    </style>

</resources>