<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:padding="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/senderImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@color/transparent"
        android:src="@drawable/ic_profile_default"
        app:civ_border_color="@color/primary"
        app:civ_border_width="1dp" />

    <TextView
        android:id="@+id/senderName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="@dimen/standard_15"
        android:layout_toStartOf="@+id/senderImage"
        android:fontFamily="@font/poppins_medium"
        android:textColor="#000E08"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="Sender Name" />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/senderName"
        android:layout_alignEnd="@+id/senderName"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="@dimen/standard_10"
        android:background="@drawable/message_background_2"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/white"
        android:textSize="14sp"
        tools:text="Message Text" />

</RelativeLayout>