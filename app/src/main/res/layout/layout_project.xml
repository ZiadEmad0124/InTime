<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/InTime.CardView.Project"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/standard_20"
    android:layout_marginVertical="@dimen/standard_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/standard_10">

        <TextView
            android:id="@+id/projectName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/black"
            android:textSize="21sp"
            tools:text="Title" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/border_radius_16">

            <ImageView
                android:id="@+id/projectPhoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:importantForAccessibility="no"
                android:minHeight="140dp"
                android:scaleType="centerCrop"
                android:src="@drawable/project_image" />

        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/standard_5"
            android:gravity="center">

            <ImageView
                android:id="@+id/deleteProject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/standard_5"
                android:importantForAccessibility="no"
                android:padding="@dimen/standard_5"
                android:src="@drawable/ic_cancel" />

            <ImageView
                android:id="@+id/editProject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/standard_5"
                android:importantForAccessibility="no"
                android:padding="@dimen/standard_5"
                android:src="@drawable/ic_edit_project" />

            <ImageView
                android:id="@+id/addNewTask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/standard_5"
                android:importantForAccessibility="no"
                android:padding="@dimen/standard_5"
                android:src="@drawable/ic_add_new_project" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/shareProject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/standard_5"
                android:importantForAccessibility="no"
                android:padding="@dimen/standard_5"
                android:src="@drawable/ic_share_project" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/viewTasks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/standard_5"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/border_radius_8"
                app:strokeColor="@color/primary">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/standard_5"
                    android:text="@string/view_tasks"
                    android:textColor="@color/primary" />

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>