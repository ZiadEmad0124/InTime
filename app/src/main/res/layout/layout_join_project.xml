<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/InTime.CardView.AlertDialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/standard_25"
        android:paddingVertical="@dimen/standard_15">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/join_project"
            android:textAlignment="center"
            android:textColor="@color/primary"
            android:textSize="26sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/linkLayout"
            style="@style/InTime.TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/standard_30"
            android:autofillHints="text"
            android:hint="@string/link"
            android:inputType="text">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/link"
                style="@style/InTime.TextInputEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="5" />

        </com.google.android.material.textfield.TextInputLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:layout_marginTop="@dimen/standard_50">

            <Button
                android:id="@+id/joinProjectButton"
                style="@style/InTime.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/join" />

            <ProgressBar
                android:id="@+id/progressCircular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminateTint="@color/grey_5"
                android:visibility="gone" />

        </FrameLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>