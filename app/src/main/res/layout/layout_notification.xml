<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/standard_20"
    android:layout_marginTop="@dimen/standard_20"
    app:cardCornerRadius="@dimen/border_radius_16"
    app:cardElevation="@dimen/standard_5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/standard_15"
        android:orientation="vertical"
        android:padding="@dimen/standard_15">

        <TextView
            android:id="@+id/notificationMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:lines="1"
            android:textStyle="bold"
            tools:text="You finished your first task" />

        <TextView
            android:id="@+id/notificationDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginTop="@dimen/standard_10"
            android:fontFamily="@font/roboto"
            android:textStyle="bold"
            tools:text="1/2/2023" />

    </LinearLayout>

</androidx.cardview.widget.CardView>